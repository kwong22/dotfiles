inoremap jk <ESC>
let mapleader = "\<Space>"
filetype plugin indent on
syntax on
set encoding=utf-8
set background=dark

" Use spaces instead of tabs
set expandtab

" Use shiftwidth instead of tabstop at the start of lines
set smarttab

" 1 tab == 2 spaces
set shiftwidth=2
set tabstop=2

" Linebreak on 80 characters
set lbr
set tw=80

set ai "Auto indent
set wrap "Wrap lines
